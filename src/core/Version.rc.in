#include <winver.h>

#cmakedefine01 COPYING

#if ${VERSION_PRERELEASE}
#define FILEFLAGS_PRERELEASE VS_FF_PRERELEASE
#else
#define FILEFLAGS_PRERELEASE 0
#endif

#if ${VERSION_PRIVATE}
#define FILEFLAGS_PRIVATEBUILD VS_FF_PRIVATEBUILD
#else
#define FILEFLAGS_PRIVATEBUILD 0
#endif

#if defined(ARX_DEBUG)
#define FILEFLAGS_DEBUG VS_FF_DEBUG
#else
#define FILEFLAGS_DEBUG 0
#endif

VS_VERSION_INFO VERSIONINFO
	FILEVERSION     ${VERSION_MAJOR},${VERSION_MINOR},${VERSION_PATCH},${VERSION_BUILD}
	PRODUCTVERSION  ${VERSION_MAJOR},${VERSION_MINOR},${VERSION_PATCH},${VERSION_BUILD}
	FILEFLAGSMASK   (VS_FF_PRERELEASE|VS_FF_PRIVATEBUILD|VS_FF_DEBUG)
	FILEFLAGSMASK   (FILEFLAGS_PRERELEASE|FILEFLAGS_PRIVATEBUILD|FILEFLAGS_DEBUG)
	FILEOS          VOS_NT_WINDOWS32
	FILETYPE        VFT_APP
	FILESUBTYPE     VFT2_UNKNOWN
BEGIN
	BLOCK "StringFileInfo"
	BEGIN
		BLOCK "040904E4"
		BEGIN
			VALUE "CompanyName",      "${VERSION_NAME} Team"
			VALUE "FileDescription",  "${NAME}"
			VALUE "FileVersion",      "${VERSION_STRING}${VERSION_SUFFIX}${GIT_SUFFIX_5}"
			VALUE "InternalName",     "${EXE}"
			#if COPYING
			VALUE "LegalCopyright",   "${COPYING_2} ${COPYING_4}"
			#endif
			VALUE "OriginalFilename", "${EXE}.exe"
			VALUE "ProductName",      "${VERSION_NAME}"
			VALUE "ProductVersion",   "${VERSION_STRING}${VERSION_SUFFIX}${GIT_SUFFIX_5}"
		END
	END
	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x409, 0x4E4
	END
END
